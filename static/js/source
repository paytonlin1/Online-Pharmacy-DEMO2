// Add smooth scrolling
document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
            target.scrollIntoView({
                behavior: 'smooth'
            });
        }
    });
});

// Demo button interactions
document.addEventListener('DOMContentLoaded', function() {
    // Process buttons
    const processButtons = document.querySelectorAll('.btn-success');
    processButtons.forEach(button => {
        if (button.textContent.includes('Process')) {
            button.addEventListener('click', function() {
                alert('Processing order...');
            });
        }
    });

    // Refill buttons
    const refillButtons = document.querySelectorAll('.btn-outline-primary, .btn-primary');
    refillButtons.forEach(button => {
        if (button.textContent.includes('Refill') || button.textContent.includes('Order')) {
            button.addEventListener('click', function() {
                alert('Refill order initiated!');
            });
        }
    });
});